/*
 * O programa TempoXadrez, tem como foco calcular o tempo que levou um jogo de xadrez. 
 *
 */
package tempoxadrez;


import java.util.Scanner;

/**
 *
 * @author:   Grupo MimAcher
 * 
 *               Arthur Alves da Costa 
 * @RA:          8341731
 * 
 *               Gabriel Silva de Assis Camargo
 * @RA:          8391503
